@model IEnumerable<EmprestimosModel>

@{
    ViewData["Title"] = "Empréstimos";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <div>
            <a class="btn btn-success mx-2" asp-action="Exportar" asp-controller="Emprestimo"> <i class="bi bi-file-earmark-plus mx-2"></i>Exportar</a>
            <a class="btn btn-success mx-2" asp-action="Cadastrar" asp-controller="Emprestimo"> <i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar novo empréstimo</a>
        </div>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="Emprestimos" class="table table-light table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Data do empréstimo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <th scope="row">@emprestimo.Recebedor</th>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.LivroEmprestado</td>
                        <td>@emprestimo.DataEmprestimo</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-route-id="@emprestimo.Id" asp-controller="Emprestimo" asp-action="Editar"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-danger mx-2" asp-route-id="@emprestimo.Id" asp-controller="Emprestimo" asp-action="Excluir"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>